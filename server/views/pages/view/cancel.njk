{% extends "partials/layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "partials/progress-tracker.njk" import progressTracker %}
{% from "partials/miniProfile/macro.njk" import miniProfile %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}

{% set pageTitle = "Select cancellation reason" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <form method='POST'>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        <span class="govuk-hint">Cancel an official visit</span>
        {{ govukRadios({
          name: "reason",
          fieldset: {
            legend: {
              text: "Select cancellation reason for this visit",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: completionCodes | refDataToOptions
        }) }}

        {{ govukCharacterCount({
          name: "comments",
          id: "comments",
          maxlength: 240,
          label: {
            text: "Extra information (optional)",
            classes: "govuk-label--m"
          },
          hint: {
            text: "Add any additional information related to the cancellation of this visit."
          }
        }) }}

        <div class="govuk-button-group">
          {{ govukButton({
               text: "Continue",
               preventDoubleClick: true
          }) }}
          <a class="govuk-link govuk-link--no-visited-state" href="{{ back }}">Cancel and return to visit summary</a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}